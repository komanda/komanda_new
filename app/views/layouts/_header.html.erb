<header>
	<nav class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">     
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>

	      <%= link_to(root_path, class: "brand") do %>
	      	<%= image_tag "star.png" %><span class="red">Komanda</span>
	      <% end %>
	      <% link_to image_tag("komanda_clean.png", size: "130x00"), root_path, class: "brand" %>
	 
	      <div class="nav-collapse collapse">
	      	<div class="offset4 visible-desktop">
		        <ul class="nav">
		        	<li class="first <%= "_active" unless !parties_controller? %>"><%= link_to "Events", parties_path  %></li>
