						<a rel="popover" data-placement="bottom" 
							data-content="Work in progress..."
							data-original-title="Warning!">
							Share</a>
					</li>
					<li>
						<a rel="popover" data-placement="bottom" 
							data-content="Work in progress..."
							data-original-title="Warning">
							K-stuff</a>
					</li>
					<% if current_user && admin_user? %>
						<li><%= link_to "Stats", stats_path %></li>
					<% end -%>
		        </ul>
		    </div>
		    <div class="visible-phone">
			    <ul class="nav">
		        	<li class="<%= "active" unless !parties_controller? %>"><%= link_to "Events", parties_path  %></li>
					<li class="<%= "active" unless !suggestions_controller? %>"><%= link_to "Suggestions", suggestions_path  %></li>
					<!-- <li class="<%= "active" unless !shares_controller? %>"><%= link_to "Share", shares_path  %></li> -->
					<li>
						<a rel="popover" data-placement="bottom" 
							data-content="Work in progress..."
							data-original-title="Warning!">
							Share</a>
					</li>
					<li>
						<a rel="popover" data-placement="bottom" 
							data-content="Work in progress..."
							data-original-title="Warning!">
							K-stuff</a>
					</li>
					<% if current_user && admin_user? %>
						<li><%= link_to "Stats", stats_path %></li>
					<% end -%>
		        </ul>
	       </div>
		    <ul class="nav pull-right">
	        	<li class="dropdown">
					<% if current_user %>
						<a href="#" class="dropdwon-toggle" data-toggle="dropdown">
							<%= image_tag(current_user.img_url, size: "20x20") %>
							<%= current_user.name %>
							<b class="caret"></b>
						</a>

						<ul class="dropdown-menu">
							<li><%= link_to "Sign out", signout_path %></li>
						</ul>
					<% else %>
						<a href="#" class="dropdwon-toggle" data-toggle="dropdown">
							Sign in
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href='/auth/twitter' class='auth_provider'>Twitter</a></li>
							<li><a href='/auth/facebook' class='auth_provider'>Facebook</a></li>
							<li><a href='/auth/google_oauth2' class='auth_provider'>Google</a></li>
						</ul>
					<% end -%>
				</li>
	        </ul>
	      </div>
	 
	    </div>
	  </div>
	</nav>
