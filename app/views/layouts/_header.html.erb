<header>
	<nav class="navbar navbar-fixed-top">
	  <div class="navbar-inner">
	    <div class="container">     
	      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </a>

	      <%= link_to(root_path, class: "brand") do %>
	      	<%= image_tag "star.png" %><span class="red">komanda</span>
	      <% end %>
	 
	      <div class="nav-collapse collapse">
	      	<div class="offset4 visible-desktop">
		        <ul class="nav">
		        	<li class="first <%= "_active" unless !parties_controller? %>">
								<%= link_to "Events", parties_path  %>
							</li>
							<li class="<%= "_active" unless !suggestions_controller? %>">
								<%= link_to "Suggestions", suggestions_path  %>
							</li>
							<li class="<%= "_active" unless !shares_controller? %>">
								<%= link_to "Shares", shares_path  %>
							</li>
							<li>
								<a rel="tooltip" data-placement="bottom" data-original-title="Work in progress...">K-stuff</a>
							</li>
							<% if current_user && admin_user? %>
			        			<li><%= link_to "Stats", stats_path %></li>
			        		<% end %>
		        </ul>
		    </div>
		    <div class="visible-phone">
			    <ul class="nav">
		      <li class="<%= "active" unless !parties_controller? %>"><%= link_to "Events", parties_path  %></li>
					<li class="<%= "active" unless !suggestions_controller? %>"><%= link_to "Suggestions", suggestions_path  %></li>
					<li class="<%= "_active" unless !shares_controller? %>"><%= link_to "Shares", shares_path  %></li>
					<li>
						<a rel="tooltip" data-placement="bottom" data-original-title="Work in progress...">K-stuff</a>
					</li>
					<% if current_user %>
						<% if admin_user? %>
							<li><%= link_to 'Stats', stats_path %></li>
						<% end -%>
						<li><%= link_to "Sign out", signout_path %></li>
					<% else %>
						<li class="nav-header">Sign in</li>
						<li><a href='/auth/twitter' class='auth_provider'>twitter</a></li>
						<li><a href='/auth/facebook' class='auth_provider'>facebook</a></li>
						<li><a href='/auth/google_oauth2' class='auth_provider'>google</a></li>
					<% end -%>
		        </ul>
	       </div>
		    <ul class="nav pull-right visible-desktop">
	        	<% if current_user %>
		        	<li class="dropdown">
						<a href="#" class="dropdwon-toggle" data-toggle="dropdown">
							<%= image_tag(current_user.img_url || "star_empty.png", size: "20x20") %>
							<%= current_user.name %>
							<b class="caret"></b>
						</a>

						<ul class="dropdown-menu">
							<li><%= link_to "Sign out", signout_path %></li>
						</ul>
					</li>
				<% else %>
					<li class="dropdown">
						<a href="#" class="dropdwon-toggle" data-toggle="dropdown">
							Sign in
							<b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><a href='/auth/twitter' class='auth_provider'><i class="icon-twitter"></i> Twitter</a></li>
							<li><a href='/auth/facebook' class='auth_provider'><i class="icon-facebook"></i> Facebook</a></li>
							<li><a href='/auth/google_oauth2' class='auth_provider'><i class="icon-google-plus"></i> Google</a></li>
						</ul>
					</li>
				<% end -%>
	        </ul>
	      </div>
	 
	    </div>
	  </div>
	</nav>
</header>