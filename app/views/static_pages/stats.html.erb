<div class="main">

	<ul class="nav nav-tabs" id="#tabs">
		<li class="active"><a href="#users" data-toggle="tab">Users</a></li>
		<li><a href="#events" data-toggle="tab">Events</a></li>
		<li><a href="#suggestions" data-toggle="tab">Suggestions</a></li>
	</ul>
	 
	<div class="tab-content">
		<div class="tab-pane active" id="users">
			<h1><small><%= pluralize(@users.count, "user") %></small></h1>
			<table class="table table-bordered table-hover">
				<tbody>
					<tr>
						<th>Name</th>
						<th>Votes</th>
						<th>Comments</th>
						<th>Suggestions</th>
						<th>Shares</th>
						<th>Ratings</th>
					</tr>
					<% @users.each do |user| %>
					<tr>
						<td>
							<%= link_to image_tag(user.img_url, class: "img-rounded", size: "40x0"), user.profile_url %>
							<%= link_to user.name, user.profile_url %>
						</td>
						<td><%= user.votes.count %></td>
						<td><%= user.comments.count %></td>
						<td><%= user.suggestions.count %></td>
						<td><%= user.shares.count %></td>
						<td><%= user.ratings.count %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		
		<div class="tab-pane" id="events">
			<h1><small><%= pluralize(@events.count, "event") %></small></h1>
			<table class="table table-bordered table-hover">
				<tbody>
					<tr>
						<th>Name</th>
						<th>Rating</th>
						<th>Comments</th>
						<th>Views</th>
					</tr>
					<% @events.each do |e| %>
					<tr>
						<td><%= link_to e.title, e %></td>
						<td><%= e.get_rating %></td>
						<td><%= e.comments.count %></td>
						<td><%= e.views %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		
		<div class="tab-pane" id="suggestions">
			<h1><small><%= pluralize(@suggestions.count, "suggestion") %></small></h1>
			<table class="table table-bordered table-hover">
				<tbody>
					<tr>
						<th>Name</th>
						<th>Votes</th>
						<th>Comments</th>
					</tr>
					<% @suggestions.each do |s| %>
					<tr>
						<td>
							<%= link_to image_tag(s.user.img_url, class: "img-rounded", size: "40x0"), s.user.profile_url %>
							<%= link_to s.user.name, s.user.profile_url %>
						</td>
						<td><%= s.vote_counter %></td>
						<td><%= s.comment_counter %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		
	</div>

	
</div>