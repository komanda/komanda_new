<%- model_class = Suggestion -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:_type) %>:</strong></dt>
  <dd><%= @suggestion._type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:_id) %>:</strong></dt>
  <dd><%= @suggestion._id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @suggestion.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @suggestion.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @suggestion.location %></dd>
  <dt><strong><%= model_class.human_attribute_name(:music) %>:</strong></dt>
  <dd><%= @suggestion.music %></dd>
  <dt><strong><%= model_class.human_attribute_name(:games) %>:</strong></dt>
  <dd><%= @suggestion.games %></dd>
  <dt><strong><%= model_class.human_attribute_name(:food_drinks) %>:</strong></dt>
  <dd><%= @suggestion.food_drinks %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other) %>:</strong></dt>
  <dd><%= @suggestion.other %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vote_counter) %>:</strong></dt>
  <dd><%= @suggestion.vote_counter %></dd>
  <dt><strong><%= model_class.human_attribute_name(:votes) %>:</strong></dt>
  <dd><%= @suggestion.votes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment_counter) %>:</strong></dt>
  <dd><%= @suggestion.comment_counter %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              suggestions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_suggestion_path(@suggestion), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              suggestion_path(@suggestion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
