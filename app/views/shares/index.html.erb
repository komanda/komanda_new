<div class="row">	
	<div class="span7">
		
		<p class="lead">
			Share an event with us!
		</p>
		
		<p class="text-center">
			<% if current_user %>
				<% if @shares.count > 0 %>
					<button class="btn btn-primary btn-large hidden-phone" 
						data-target="#share-modal" data-toggle="modal">
						Share an event
					</button>

					<%= link_to "Share an event", new_share_path, 
						class: "btn btn-primary btn-large visible-phone" %>
					
					<%= render 'modal' %>
				<% else %>
					<%= render 'form' %>
				<% end -%>
			<% else %>
				<a rel="tooltip" data-placement="bottom" title="Sign in to share" 
					class="btn btn-primary btn-large visible-phone disabled">Share an event</a>
				<a rel="tooltip" data-placement="bottom" title="Sign in to share" 
					class="btn btn-primary btn-large hidden-phone disabled">Share an event</a>
			<% end -%>
		</p>
		
		<h4>Shares (<span id="shares-count"><%= @shares.count %></span>)</h4>
		<div id="shares">
			<% if @shares.count > 0 %>
				<%= render @shares %>
			<% end %>
		</div>	
	</div>
	
	<aside class="span5">
	</aside>
	
</div>

