<article id="<%= share.id %>" class="media">
	
	<% if current_user && admin_user? %>
		<%= link_to "Ã—", share, class: "close", method: :delete, remote: true %>
	<% end %>

	<div class="pull-left">
		<%= link_to image_tag(share.user.img_url, class: "img-rounded", size: "50x40"), share.user.profile_url, class: "media-object" %>
