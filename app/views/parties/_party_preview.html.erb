<div class="party-preview hidden-phone">
	<div class="row">
		<div class="span3">
			<%= link_to (image_tag object.flyer), object %>
		</div>
		
		<div class="span8">
			<h3>
				<%= object.title %> 
				<small>
					<%= time_tag object.date, format: "%B %e" %>, 
					<%= time_tag object.time, format: "%l:%M %P" %>
				</small>
			</h3>
			<hr>
			<div class="row">
				<div class="span8">
					<p>
						<i class="icon-map-marker"></i> 
							<% if object.map.blank? %>
								<%= object.address %>
							<% else %>
								<%= link_to object.address, object.map, "target"=>"_blank" %>
							<% end %>
					</p>
					<%= raw object.description %>
					<div class="buttons">
						<%= render 'shared/buy_button', object: object %>
						
						<%= render 'shared/join_button', object: object %>
					
						<%= link_to pluralize(object.comments.count, "comment"), 
							"#{party_path(object)}#comments", 
							class: "pull-right" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="visible-phone phone">
	<div class="flyer">
		<%= link_to (image_tag object.flyer), object %>	
	</div>
	<p>
		<span class="muted">
			<span class="going_counter_<%= object.id %>">
				<%= pluralize object.going.count, "person" %>
			</span> going
		</span>
	</p>
	<p>
		<%= link_to object, class: "btn btn-mini" do %>
			<i class="icon-star"></i> Rate
		<% end -%>
	
		<%= link_to "#{party_path(object)}#new_comment", class: "btn btn-mini" do %>
			<i class="icon-comment"></i> Comment
		<% end -%>
	</p>
	<hr>
</div>