</div>

<div class="visible-phone phone">
	<div class="flyer">
		<%= link_to (image_tag object.flyer), object %>	
	</div>
	<p>
	<% if current_user %>
		<% if object.going.include?(current_user.id) %>
			<a href="#" class="btn btn-success btn-mini disabled">Going</a>
		<% else %>
			<%= link_to "Join", 
				"#{parties_join_path}?party=#{object.id}", 
				class: "btn btn-success btn-mini join_button_#{object.id}", remote: true %>
		<% end -%>
	<% else %>
		<a href="#" class="btn btn-success disabled btn-mini" rel="tooltip" title="Sign in to join">Join</a>
	<% end -%>
	
	<small class="muted"><span class="going_counter_<%= object.id %>"><%= pluralize object.going.count, "person" %></span> 
	going</small>
	</p>
	<p>
		<%= link_to object, class: "btn btn-mini" do %>
			<i class="icon-star"></i> Rate
		<% end -%>
	
		<%= link_to "#{party_path(object)}#new_comment", class: "btn btn-mini" do %>
			<i class="icon-comment"></i> Comment
		<% end -%>
	</p>
	<hr>
</div>